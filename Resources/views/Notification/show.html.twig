<h1>Message</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ entity.message }}</td>
        </tr>
        <tr>
            <th>Isprivate</th>
            <td>{{ entity.isPrivate }}</td>
        </tr>
        <tr>
            <th>Isblocker</th>
            <td>{{ entity.isBlocker }}</td>
        </tr>
        <tr>
            <th>Issystem</th>
            <td>{{ entity.isSystem }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ entity.updated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('messages') }}">
            {{ 'buttons.back_to_list'|trans({}, 'GrafixWebBundle') }}
        </a>
    </li>
    <li>
        <a href="{{ path('messages_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('messages_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
