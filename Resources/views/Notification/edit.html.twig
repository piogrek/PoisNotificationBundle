<h1>Message edit</h1>

<form action="{{ path('messages_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('messages') }}">
            {{ 'buttons.back_to_list'|trans({}, 'GrafixWebBundle') }}
        </a>
    </li>
    <li>
        <form action="{{ path('messages_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
